<html>

    <head>
        <title>Hot Dawg Forum</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
        
        <link rel="stylesheet" href="./common/post-style.css" />
    </head>

    <body class="background">      
        <div class="header">
            <a href="index.html"><img class="headerLogo" src="logo.png"> Hot Dawgs</a>
            <a href="userprofile.html">My Profile</a>
            <input name="search" type="text" placeholder="Search"/>
            <a id="logout" href="login.html">Log Out</a>
        </div>
        <br>
        <% console.log("hereeee " + commentData.length) %>
        <div id="info" class="border">
            <div id="avatarDiv">
                <img src="alexcrop.png" id="avatarImg" alt="avatar">
            </div>
            
            <div>
                <div class="details font">
                    <button class="profile"><a class="commentNameClickable" href="userprofile.html"><%= data.user %></a></button> 
                    <span>07/12/2018 1:02</span>
                </div>
                <div class="title font">
                    <span name="title"><%= data.title %></span>
                </div>
            </div>
            <div class="vote">
                <div>
                    <div>
                    <button class="voteBtn"><img src="upvote.png" class="voteImg"></button>
                    </div>
                    <div>    
                    <button class="voteBtn"><img src ="downvote.png" class="voteImg"></button>
                    </div>
                </div>    
                <span class="voteCount font"><%= data.likes %></span>
            </div>
        </div>
        <br>
        <div class="contentContainer border font">
            <div class="content">
                <%= data.desc %><br><br>
                  
                <%= data.content %>
            </div>
        </div>
        <br>
        <div id="comments" class="border font">
            <div class="myComment">
                <form action = "post" method="get">
                    <textarea name="comment" class="inputComment" cols="30" rows="10" placeholder="Enter comment here"></textarea>
                    
                    <input name="title" type="submit" value="<%= data.title %>"> <--- press this to submit
                </form>
            </div>
                
            <% for(var i=0;i<commentData.length;i++){ %>
                <%- include('./comments', {
                    user: commentData[i].user,
                    content: commentData[i].content
                }); %>
            <% } %>
                
            </div>
        </div>
    </body>
    
</html>
